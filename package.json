{
  "name": "vibe-code",
  "version": "0.1.0",
  "description": "Security-first CLI wrapper for Claude Code with opinionated prompts and guardrails",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "vibe": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "cli",
    "claude",
    "claude-code",
    "ai",
    "security",
    "typescript",
    "developer-tools",
    "code-generation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.23",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.5.0",
    "eslint": "^9.5.0",
    "@eslint/js": "^9.5.0",
    "typescript-eslint": "^8.0.0",
    "prettier": "^3.3.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0"
  }
}
